	            <li><!-- <%=link_to 'Trash', trash_path, class: 'a' %> -->
	             <a href="trash.html">Trash</a></li>
	        </ul>
	        <hr>

	        <!-- HERE WILL BE THE STORAGE BAR -->
	        <div id="show-storage" style="padding: 8px 16px;">
	            <p>Storage</p>
	            <progress id="file" value="32" max="100"> 32% </progress>
	            <p>32 GB of 100 GB used</p>
	        </div>
